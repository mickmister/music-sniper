{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots" : ["./types"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es7"
    ],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@interfaces/*": ["interfaces/*"],
      "@music-processing/*": ["music-processing/*"],
      "@pages/*": ["pages/*"],
      "@services/*": ["services/*"],
      "@store": ["store/*"],
      "@src": ["./*"],
      "@types/*": ["src/types/*"],
      "@util": ["util/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
